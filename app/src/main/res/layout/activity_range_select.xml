<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RangeSelectActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入住:" />

        <TextView
            android:id="@+id/tv_first_select_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="离店:" />

        <TextView
            android:id="@+id/tv_last_select_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <com.sunyuan.calendarlibrary.MonthLableView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp" />

    <com.sunyuan.calendarlibrary.CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        sy:cl_dividerHeight="1dp"
        sy:cl_firstSelectDayText="开始"
        sy:cl_firstTopMargin="8dp"
        sy:cl_lastSelectDayText="结束"
        sy:cl_monthPaddingBottom="20dp"
        sy:cl_monthPaddingTop="20dp"
        sy:cl_secondTopMargin="4dp"
        sy:cl_selectBgDrawableFirst="@drawable/drawable_calendar_select_first_bg"
        sy:cl_selectBgDrawableLast="@drawable/drawable_calendar_select_last_bg"
        sy:cl_selectMaxRange="120"
        sy:cl_selectRangeBgDrawable="@drawable/drawable_calendar_select_range_bg"
        sy:cl_thirdTopMargin="4dp" />
</LinearLayout>